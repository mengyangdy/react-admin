{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.{js,jsx,ts,tsx,json,css,html,md}",
			"!**/auto-imports.d.ts",
			"!**/routeTree.gen.ts",
			"!**/dist",
			"!**/build",
			"!**/.turbo",
			"!**/.next",
			"!**/coverage",
			"!**/node_modules"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"formatWithErrors": true,
		"attributePosition": "multiline"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off",
				"noStaticElementInteractions": "off"
			},
			"suspicious": {
				"noDebugger": "error",
				"noConsole": "error"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":NODE:",
							":BLANK_LINE:",

							":PACKAGE:",
							":BLANK_LINE:",

							["@/**"],
							":BLANK_LINE:",

							["../**", "./**"]
						]
					}
				}
			}
		}
	}
}
